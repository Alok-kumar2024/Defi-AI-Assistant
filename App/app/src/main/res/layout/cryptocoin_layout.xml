<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/CL_CryptoLayout"
    style="@style/CryptoCoinBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        style="@style/TopImageSignIn"
        android:id="@+id/IvCryptoCoinImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bit_coin_vector"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/LLCoinNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/IvCryptoCoinImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">

        <TextView
            style="@style/TopTextSignIn"
            android:id="@+id/TvCrptoCoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BITCoin"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            style="@style/SecondartText"
            android:id="@+id/TvCryptoCoinShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/LineChartCryptoCoin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/LLCoinNames"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/LineChartCryptoCoin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/TopTextSignIn"
            android:id="@+id/TvPriceCryptoCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:inputType="textMultiLine"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            style="@style/CryptoCoinIncrementText"
            android:id="@+id/TvIncrementCryptoCoins"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="increment"
            android:textSize="20sp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>