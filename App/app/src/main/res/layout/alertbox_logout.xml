<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/theme_alertDialogBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Logout Confirmation Text -->
    <TextView
        android:id="@+id/TvUserNameLogout"
        style="@style/TopTextSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="user"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        style="@style/SecondartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to log out?"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:gravity="center" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/BtnCancelLogOutAlertBox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_text_signin_up_small_corner"
            app:backgroundTint="@color/red"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/BtnLogOutAlterBox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Logout"
            android:textColor="@color/white"
            android:background="@drawable/bg_text_signin_up_small_corner"
            app:backgroundTint="@color/blue"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
