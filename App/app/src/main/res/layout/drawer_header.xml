<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/CvDrawerHeader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageView
            style="@style/TopImageSignIn"
            android:id="@+id/BitCoinImgHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/bit_coin_vector"/>

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/TopTextSignIn"
        android:id="@+id/TvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI-Defi-Assistant"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <View
        style="@style/DividerViewSignIn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"/>


</LinearLayout>