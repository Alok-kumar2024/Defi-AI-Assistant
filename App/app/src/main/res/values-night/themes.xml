<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

<!--DARK THEME-->


<!--    Sign In Activity Style-->

    <style name="backgroundSignIn">
        <item name="android:background">@drawable/bg_signin_up</item>
    </style>

    <style name="TopImageSignIn">
        <item name="android:background">@drawable/bg_img_signin</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TopTextSignIn">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondartText">
        <item name="android:textColor">#818181</item>
    </style>

    <style name="EditTextSignIn">
        <item name="android:background">@drawable/bg_text_signin_up_small_corner</item>
        <item name="android:backgroundTint">#0E0B0B</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="passwordToggleTint">@color/white</item>
    </style>

    <style name="BtnSignIn">
        <item name="android:background">@drawable/bg_text_signin_up_small_corner</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DividerViewSignIn">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BtnWalletSignIn">
        <item name="android:background">@drawable/bg_text_signin_up_small_corner</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:elevation">5dp</item>
        <item name="android:drawableTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SignUpTextSignIn">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <!--    Fragment Market Style-->

    <style name="BackgroundMarket">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TopTextMarket">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextSearchMarket">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:backgroundTint">#242323</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">#4B4B4B</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="chip_groupMarket">

        <item name="chipBackgroundColor">@color/gray_dark</item>
        <item name="rippleColor">@color/gray</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <!--    Crypto-Coin Layout Style-->
    <style name="CryptoCoinBackground">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:backgroundTint">#191620</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="CryptoCoinIncrementText">
        <item name="android:textColor">@color/green_dark</item>
    </style>


</resources>